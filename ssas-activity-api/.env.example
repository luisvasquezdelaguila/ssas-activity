# Environment Configuration
NODE_ENV=development

# Database Configuration
MONGO_URI=mongodb://localhost:27017/ssas-activity
MONGO_DATABASE=ssas-activity

# Server Configuration
PORT=3000

# JWT Configuration
# Generate new keys using: openssl genrsa -out private.pem 4096 && openssl rsa -in private.pem -pubout -out public.pem
APP_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n[YOUR_PRIVATE_KEY_HERE]\n-----END PRIVATE KEY-----\n"
APP_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\n[YOUR_PUBLIC_KEY_HERE]\n-----END PUBLIC KEY-----\n"

# Debug Mode
APP_DEBUG=true

# CORS Configuration (optional)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting (optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration (optional)
SESSION_SECRET=your-super-secret-session-key

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Webhook Configuration (optional)
WEBHOOK_SECRET=your-webhook-secret-key
